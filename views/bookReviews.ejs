<body>
  
    <div class="d-flex flex-row">  <div class="sticky ">  <%- include("partials/sideBar.ejs",{books: books}) %> 
      </div>
      
  <div class="container">
    
      <div class="main-content overflow-auto">
        <div class="container">
          <section class="py-5 text-center container">
            <div class="row py-lg-5">
              <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Book Reviews</h1>
                <p class="lead text-body-secondary">Welcome to our Book Reviews Hub! Dive into a treasure trove of opinions from fellow book lovers. From thrilling adventures to heartwarming stories, discover what our community thinks about the books they've read. </p>
                
                
  
                
              </div>
            </div>
          </section>
          
          <div class="album py-5 bg-body-tertiary">
            <div class="container">
              <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-3">
             
                
               <% if (books.length > 0) { %>
                <% books.forEach(book => { %>
                          <div class="col">
                      <div class="card ">
                        <% if (book.img_url) { %>
                          <img src="<%= book.img_url %>" class="card-img-top" alt="<%= book.title %>">
                        <% } else { %>
                          <p>Image not available</p>
                        <% } %>
                       
                        <div class="card-body">
                          <p class="card-text"><span>Title:</span>  <%= book.title %></p>
                          <p class="card-text"><span>Author:</span>  <%= book.author %></p>
                          <p class="card-text"><span>Description:</span> <%= book.description %></p>
                          <small class="text-body-secondary">Book Rating: <%= book.rating %>/5 ‚≠ê</small>
                          <div class="mt-2 d-flex justify-content-between align-items-center flex-wrap">
                              <div class="btn-group">
                                <form  action="/book" method="post">
                                  <input type="hidden" name="selectedBook" value="<%= book.bookid %>">
                                  <button type="submit" class="btn btn-sm btn-outline-secondary">View</button>
                                  <small class=" text-body-secondary">Review by: <%= book.name %></small>
                                </form>
                               
                                
                              </div>
                              <% const date = new Date(book.date_read); %>
                              <% const day = date.getDate().toString().padStart(2, '0');%> 
                              <%  const month = (date.getMonth() + 1).toString().padStart(2, '0'); %>
                              <% const year = date.getFullYear(); %>
                              <div class="layout">
                              <small class=" text-body-secondary">Read Date:</small>
                              <small class=" text-body-secondary"><%= day + "/" + month +"/"+year %></small>
                            </div>
                            </div>
                          </div>
                        </div>
                      </div>  
                    <%  }); %>
             <%  } else { %>
              <div class="p-container"><p class="centered-p">No books Added Yet</p></div>
              <div class="stack">
                <div class="no-books">
                <div class="book"></div>
                <div class="book"></div>  
                <div class="book"></div>
                <div class="book"></div>  
                <div class="book"></div>  
              </div>
              </div>
              <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
  
  
    
  
  </body>