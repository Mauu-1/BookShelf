<div class="d-flex flex-row">  <div class="sticky">  <%- include("partials/sideBar.ejs") %>
</div>
<div class="container">
    <div class="d-flex flex-column">
        <div class="d-flex ">
            <img class="mt-5 mx-3 book-info" src="<%= book.img_url %>" alt="<%= book.title %>">
            <div>
            <h1 class="heading display-1 mt-5"><%= book.title %> - By <%= book.author %></h1>
            <p class=" mt-3 text-body-secondary"><span> ISBN:</span> <%= book.isbn %></p>
            <% const date = new Date(book.date_read); %>
            <% const day = date.getDate().toString().padStart(2, '0');%> 
            <%  const month = (date.getMonth() + 1).toString().padStart(2, '0'); %>
            <% const year = date.getFullYear(); %>
            <p class=" mt-3 text-body-secondary"><span> Date Read:</span> <%= day + "/" + month +"/"+year %></p>
            <p class=" mt-3 text-body-secondary"><span> My Rating:</span> <%= book.rating %>/5 ‚≠ê</p>
            </div>
        </div>
        <div class="mt-3 mx-3">
            <p class="lead"><%= book.description %></p>
        </div>
        <div class="mt-3 mx-3">
            <p class="display-5 notes">Notes</p>
            <p ><%= book.book_notes %></p>
        </div>
    </div>

</div>